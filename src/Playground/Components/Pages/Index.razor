@page "/"
@using Companion.Signaling.Core

@inherits SignalingComponentBase

<button @onclick="IncreaseCounter">
    Increase Counter
</button>

<div>
    Counter: @Counter.Get()<br />
</div>

@code{
    public Signal<int> Counter { get; } = new(0);

    private void IncreaseCounter()
    {
        Counter.Set(Counter.Get() + 1);
    }
}
